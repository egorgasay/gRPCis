# This workflow will build a golang project
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-go

name: Pages

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:

  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3

    - name: Set up Go
      uses: actions/setup-go@v3
      with:
        go-version: 1.19

    - name: Run memory balancer
      run: go run cmd/balancer/main.go -d="$MONGO" &
      
    - name: Run storage instance
      run: go run cmd/grpc-storage/main.go -a=':1000' -connect=':800' -d="$MONGO" &

    - name: Run web app
      run: go run cmd/grpc-storage-cli/main.go -a=':80'
